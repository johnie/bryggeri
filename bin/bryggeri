#!/usr/bin/env bash

version="1.0.7"

# Packages to install
packages=(
    "ansible"
    "bat"
    "chrome-cli"
    "coreutils"
    "curl"
    "entr"
    "eza"
    "ffmpeg"
    "fx"
    "fzf"
    "git-delta"
    "git-extras"
    "git"
    "go"
    "httpie"
    "gh"
    "imagemagick"
    "jq"
    "mas"
    "ncdu"
    "neovim"
    "nmap"
    "nvm"
    "openssl"
    "python"
    "rclone"
    "ripgrep"
    "rust"
    "speedtest-cli"
    "tmux"
    "tre-command"
    "wget"
    "youtube-dl"
)

# Casks to install
casks=(
    "adobe-creative-cloud"
    "appcleaner"
    "bartender"
    "brave-browser"
    "docker"
    "dropbox"
    "figma"
    "firefox"
    "google-chrome"
    "iterm2"
    "karabiner-elements"
    "keepingyouawake"
    "raycast"
    "rectangle"
    "spotify"
    "visual-studio-code"
    "warp"
)

usage() {
cat <<EOF

    Usage: bryggeri [options]

    Options:
        install           Install packages
        install --casks   Install casks
        -V, --version     Output version
        -L, --list        Output the packages
        -h, --help        This message
        --                End of options

EOF
}


bryggeriMain() {
        echo -e "\033[1;97müçº Bryggeri:\033[0m Installing packages...\n"
    for pkg in "${packages[@]}"; do
        if brew ls --versions "${pkg}" > /dev/null; then
            printf "\e[92m[‚úî] \e[32mPackage \e[39m'$pkg' \e[32mis already installed!\n"
        else
            brew install $(IFS=" "; echo "${pkg[@]}")
        fi
    done
}

bryggeriCasks() {
    echo -e "\033[1;97müçº Bryggeri:\033[0m Installing casks...\n"
    for cask in "${casks[@]}"; do
        if brew list --cask | grep -q "^${cask}\$"; then
            printf "\e[92m[‚úî] \e[32mCask \e[39m'$cask' \e[32mis already installed!\n"
        else
            brew install --cask $(IFS=" "; echo "${cask[@]}")
        fi
    done
}

while [[ "$1" =~ ^- && ! "$1" == "--" ]]; do
    case $1 in
        -V | --version )
            echo $version
            exit
            ;;
        -L | --list )
            echo ${packages[@]}
            exit
            ;;
        -h | --help )
            usage
            exit
            ;;
    esac
    shift
done

if [[ "$1" == "--" ]]; then shift; fi

if [[ "$1" == "i" || "$1" == "install" ]]; then
    shift
    if [[ "$1" == "-c" || "$1" == "--cask" ]]; then
        bryggeriCasks
    else
        bryggeriMain
    fi
    exit
fi

usage
